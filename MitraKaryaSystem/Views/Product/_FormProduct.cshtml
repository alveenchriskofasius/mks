@model ProductViewModel
@{
    var categoryID = Model.ProductModel.CategoryID;
    var supplierID = Model.ProductModel.SupplierID;
    var unitID = Model.ProductModel.UnitID;
}
<form id="productForm">
    <input asp-for="ProductModel.ID" type="text" hidden />
    <div class="row mb-3">
        <label class="form-label col-sm-2">Name<span class="asterisk">*</span></label>
        <div class="col-sm-9">
            <input type="text" asp-for="ProductModel.Name" required class="form-control" />
            <div class="invalid-feedback">Please enter a valid name.</div>
        </div>
    </div>
    <div class="row mb-3">
        <label class="form-label col-sm-2">Barcode</label>
        <div class="col-sm-9">
            <input type="text" asp-for="ProductModel.Barcode" class="form-control" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="form-label col-sm-2">Description</label>
        <div class="col-sm-9">
            <input type="text" asp-for="ProductModel.Description" class="form-control" />
        </div>
    </div>

    <div class="row mb-3">
        <label for="unitPrice" class="form-label col-sm-2">Unit Price<span class="asterisk">*</span></label>
        <div class="col-sm-9">
            <input type="text" asp-for="ProductModel.UnitPrice" required class="form-control" maxlength="7" />
            <div class="invalid-feedback">Please enter a valid unit price.</div>
        </div>
    </div>

    <div class="row mb-3">
        <label asp-for="ProductModel.SupplierID" class="form-label col-sm-2">Supplier<span class="asterisk">*</span></label>
        <div class="col-sm-9">
            <select asp-for="ProductModel.SupplierID" id="comboBoxSupplier" required class="form-control">
            </select>
            <div class="invalid-feedback">Please select a valid supplier.</div>
        </div>
    </div>

    <div class="row mb-3">
        <label asp-for="ProductModel.CategoryID" class="form-label col-sm-2">Category<span class="asterisk">*</span></label>
        <div class="col-sm-9">
            <select asp-for="ProductModel.CategoryID" id="comboBoxCategory" required class="form-control"></select>
            <div class="invalid-feedback">Please select a valid category.</div>
        </div>
        <div class="col-sm-1">
            <button type="button" id="buttonAddCategory" class="btn btn-primary">Add</button>
        </div>
    </div>

    <div class="row mb-3">
        <label asp-for="ProductModel.UnitID" class="form-label col-sm-2">Unit<span class="asterisk">*</span></label>
        <div class="col-sm-9">
            <select required id="comboBoxUnit" asp-for="ProductModel.UnitID" class="form-control"></select>
            <div class="invalid-feedback">Please select a valid unit.</div>
        </div>
        <div class="col-sm-1">
            <button type="button" id="buttonAddUnit" class="btn btn-primary">Add</button>
        </div>
    </div>
</form>


<script>
    var categoryID = @Html.Raw(Json.Serialize(categoryID));
    var supplierID = @Html.Raw(Json.Serialize(supplierID));
    var unitID = @Html.Raw(Json.Serialize(unitID));
</script>